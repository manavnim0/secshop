{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "typeRoots": [ "../node_modules/@types" ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
